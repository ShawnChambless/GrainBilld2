doctype html
html(lang='en')
    head
        title Grain Billd
        link(href='styles/main.css' rel='stylesheet')
    body(ng-app='GrainBilld')
        header.navigation(role='banner')
          .navigation-wrapper
            a.logo(ui-sref='home')
              span.octicon.octicon-beer
              span.name   Grain Billd
            a#js-mobile-menu.navigation-menu-button(ng-href="{{currentUrl}}") Menu
            nav(role='navigation' ng-controller='navCtrl')
              ul#js-navigation-menu.navigation-menu.show
                li.nav-link
                  a(ui-sref='home') Home
                li.nav-link
                  a(ui-sref='newBatch') New Batch
                li.nav-link
                    a(ng-href='#/IngredientInfo') Ingredient Info
                li.nav-link.more
                  a(ng-href="{{currentUrl}}") Recipes
                  ul.submenu
                    li(ng-if='currentUser')
                      a(ng-href='#/MyRecipes/{{currentUser.id}}') My Recipes
                    li
                      a(ui-sref='communityRecipes') Community Recipes
                li.nav-link.logout
                    a(ng-href='/auth/logout' ng-click='logOut()' ng-show='showLogIn') Log Out
                    a(ui-sref='login' ng-hide='showLogIn') Log In
                    //-   ul.submenu
